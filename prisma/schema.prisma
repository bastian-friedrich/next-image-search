generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Create image model for our database
model Images {
  id         Int      @id @default(autoincrement())
  suchtext   String
  bildnummer String   @unique
  fotografen String
  datum      DateTime
  hoehe      Int
  breite     Int

  // Normalized fields
  restriction String?  // e.g., "PUBLICATIONxINxGERxSUIxAUTxONLY"
  people      String[] @default([])
  locations   String[] @default([])
  normalizeVersion Int?

  // Create indexes for faster querying
  @@index([suchtext, fotografen, bildnummer])
  @@index([suchtext])
  @@index([fotografen])
  @@index([restriction])
}

model SearchLog {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  query       String?
  restriction String?
  credit      String?
  date        String?
  page        Int
  pageSize    Int
  sort        String
  responseMs  Int
  resultCount Int
}